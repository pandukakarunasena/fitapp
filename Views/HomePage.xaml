<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitApp.Views.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        <Label 
            x:Name="lblName"
            Text= "{Binding Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Button x:Name="btnAddWorkout" Text="Add Workout" Clicked="btnAddWorkout_Clicked"></Button>
            <Button x:Name="btnAddCheatMeal" Text="Add Cheat Meal" Clicked="btnAddCheatMeal_Clicked"></Button>
            <Button x:Name="btnToReport" Text="Check Report" Clicked="btnToReport_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>