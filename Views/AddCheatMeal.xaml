<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitApp.Views.AddCheatMeal"
             Title="AddCheatMeal">
    
    <ListView x:Name="CheatMealListView"
              ItemSelected="OnCheatMealSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Button x:Name="btnSelectCheatMeal"  Text="{Binding Name}" Clicked="btnSelectCheatMeal_Clicked"></Button>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
    