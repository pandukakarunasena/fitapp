<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitApp.Views.Modals.WorkoutDetailsModalPage"
             Title="WorkoutDetailsModalPage">
    <StackLayout Padding="20">
        <Label Text="Workout Type: " FontSize="18" />
        <Label Text="{Binding Name}" FontSize="18" />

        <Label Text="Amount Completed" FontSize="18" />
        <Entry x:Name="amountEntry" Placeholder="Enter amount completed" Keyboard="Numeric" />

        <Label Text="Intensity" FontSize="18" />
        <Picker x:Name="intensityPicker">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Low</x:String>
                    <x:String>Moderate</x:String>
                    <x:String>High</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button Text="Save" Clicked="OnSaveClicked" HorizontalOptions="Center" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
