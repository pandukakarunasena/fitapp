<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitApp.Views.Modals.CheatMealDetailsModal"
             Title="CheatMealDetailsModal">
    <StackLayout Padding="20">
        <Label Text="Meal Type: " FontSize="18" />
        <Label Text="{Binding Name}" FontSize="18" />

        <Label Text="Consumed Amount" FontSize="18" />
        <Entry x:Name="consumedEntry" Placeholder="Enter consumed amount" Keyboard="Numeric" />

        <Button Text="Save" Clicked="OnSaveClicked" HorizontalOptions="Center" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>